<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Lista de Contatos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            padding-top: 70px;
        }
        .card-img {
            width: 80px;
            height: 80px;
            object-fit: cover;
            border-radius: 50%;
        }
    </style>
</head>
<body>
<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">MeuApp</a>
        <div class="ms-auto d-flex align-items-center">
            <span class="text-white me-3"><%= user.name %></span>
            <a class="btn btn-outline-light btn-sm" href="/logout">Sair</a>
        </div>
    </div>
</nav>

<!-- Lista de Contatos -->
<div class="container mt-4">
    <div class="row">
        <% contacts.forEach((contact, index) => { %>
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body d-flex">
                        <img src="<%= contact.photo || '/images/default.png' %>" alt="Foto" class="card-img me-3">
                        <div>
                            <h5 class="card-title mb-1"><%= contact.name %></h5>
                            <p class="mb-1"><strong>Telefone:</strong> <%= contact.phone %></p>
                            <p class="mb-1"><strong>Email:</strong> <%= contact.email %></p>
                            <p class="mb-0"><strong>Endereço:</strong> <%= contact.address %></p>
                        </div>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>
<%- include('../common/end.ejs') %>
